{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "env": ["APP_URL", "GITHUB_API_TOKEN"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "lint:fix": {
      "dependsOn": ["transit"]
    },
    "check-types": {
      "dependsOn": ["transit"],
      "outputs": [".next/types/**"]
    },
    "format:check": {
      "cache": false
    },
    "format:write": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
