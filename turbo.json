{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": ["APP_URL", "GITHUB_API_TOKEN"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "format:check": {
      "cache": false
    },
    "format:write": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
